<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

    </data>

    <android.support.design.widget.CoordinatorLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/home_bg"
        android:clickable="true"
        android:focusable="true"
        android:focusableInTouchMode="true">

        <android.support.design.widget.AppBarLayout
            android:id="@+id/appbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@null"
            app:elevation="0dp">

            <android.support.v7.widget.Toolbar
                android:id="@+id/toolbar"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                app:contentInsetStart="0dp">

                <android.support.constraint.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <ImageView
                        android:id="@+id/setting_iv_menu"
                        android:layout_width="36dp"
                        android:layout_height="36dp"
                        android:layout_marginStart="8dp"
                        android:padding="8dp"
                        android:src="@drawable/ic_menu"
                        android:visibility="invisible"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Custom Setting"
                        android:textColor="@color/white"
                        android:textSize="22sp"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toStartOf="@+id/setting_iv_close"
                        app:layout_constraintStart_toEndOf="@+id/setting_iv_menu"
                        app:layout_constraintTop_toTopOf="parent" />

                    <ImageView
                        android:id="@+id/setting_iv_close"
                        android:layout_width="36dp"
                        android:layout_height="36dp"
                        android:layout_marginEnd="8dp"
                        android:padding="4dp"
                        android:src="@drawable/ic_close"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                </android.support.constraint.ConstraintLayout>

            </android.support.v7.widget.Toolbar>
        </android.support.design.widget.AppBarLayout>

        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layout_behavior="android.support.design.widget.AppBarLayout$ScrollingViewBehavior">

        </android.support.constraint.ConstraintLayout>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layout_behavior="android.support.design.widget.AppBarLayout$ScrollingViewBehavior">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <android.support.constraint.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/setting_tv_partition_title"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="Partition :"
                        android:textColor="@color/white"
                        android:textSize="16sp"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toStartOf="@+id/setting_tv_partition_spinner"
                        app:layout_constraintHorizontal_chainStyle="spread"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <TextView
                        android:id="@+id/setting_tv_partition_spinner"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:background="#33ffffff"
                        android:drawableEnd="@drawable/ic_spinner"
                        android:paddingStart="4dp"
                        android:paddingTop="2dp"
                        android:paddingEnd="4dp"
                        android:paddingBottom="2dp"
                        android:text="/sdcard"
                        android:textColor="@color/white"
                        android:textSize="16sp"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toEndOf="@id/setting_tv_partition_title"
                        app:layout_constraintTop_toTopOf="parent" />
                </android.support.constraint.ConstraintLayout>

                <android.support.constraint.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <android.support.constraint.Guideline
                        android:id="@+id/setting_guideline_middle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        app:layout_constraintGuide_percent="0.5" />

                    <TextView
                        android:id="@+id/setting_tv_threads_title"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Number of Threads :"
                        android:textColor="@color/white"
                        android:textSize="16sp"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toStartOf="@id/setting_guideline_middle"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <EditText
                        android:id="@+id/setting_et_threads"
                        style="@style/SettingItemEditText"
                        android:layout_width="60dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:inputType="number"
                        android:text="1"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintStart_toEndOf="@+id/setting_tv_threads_title"
                        app:layout_constraintTop_toTopOf="parent" />

                    <TextView
                        android:id="@+id/setting_tv_threads_message"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="8dp"
                        android:text="(1~100)"
                        android:textColor="@color/white"
                        android:textSize="16sp"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toEndOf="@+id/setting_et_threads"
                        app:layout_constraintTop_toTopOf="parent" />
                </android.support.constraint.ConstraintLayout>

                <android.support.constraint.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:background="@drawable/setting_tab_bg">

                    <android.support.constraint.Guideline
                        android:id="@+id/setting_guideline_middle_fileio"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        app:layout_constraintGuide_percent="0.5" />

                    <TextView
                        android:id="@+id/setting_tv_fileio_header"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/setting_tab_header_bg"
                        android:drawableStart="@drawable/ic_fileio"
                        android:drawablePadding="2dp"
                        android:padding="6dp"
                        android:text="File IO"
                        android:textColor="#737bd4"
                        android:textSize="16sp" />

                    <TextView
                        android:id="@+id/setting_tv_button_seq_write"
                        style="@style/SettingItem"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:drawableStart="@drawable/ic_checkbox_false"
                        android:text="Seq.Write"
                        app:layout_constraintEnd_toStartOf="@id/setting_guideline_middle_fileio"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/setting_tv_fileio_header" />

                    <TextView
                        style="@style/SettingItem"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:layout_marginBottom="8dp"
                        android:drawableStart="@drawable/ic_checkbox_false"
                        android:text="Seq.Read"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toStartOf="@id/setting_guideline_middle_fileio"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/setting_tv_button_seq_write" />

                    <TextView
                        android:id="@+id/setting_tv_button_ran_write"
                        style="@style/SettingItem"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:drawableStart="@drawable/ic_checkbox_false"
                        android:text="Ran.Write"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toEndOf="@id/setting_guideline_middle_fileio"
                        app:layout_constraintTop_toBottomOf="@id/setting_tv_fileio_header" />

                    <TextView
                        style="@style/SettingItem"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:layout_marginBottom="8dp"
                        android:drawableStart="@drawable/ic_checkbox_false"
                        android:text="Ran.Read"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toEndOf="@id/setting_guideline_middle_fileio"
                        app:layout_constraintTop_toBottomOf="@id/setting_tv_button_seq_write" />

                </android.support.constraint.ConstraintLayout>

                <android.support.constraint.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:background="@drawable/setting_tab_bg">

                    <android.support.constraint.Guideline
                        android:id="@+id/setting_guideline_middle_sqlite"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        app:layout_constraintGuide_percent="0.5" />

                    <TextView
                        android:id="@+id/setting_tv_sqlite_header"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/setting_tab_header_bg"
                        android:drawableStart="@drawable/ic_sqlite"
                        android:drawablePadding="2dp"
                        android:padding="6dp"
                        android:text="SQLite"
                        android:textColor="#737bd4"
                        android:textSize="16sp" />

                    <TextView
                        android:id="@+id/setting_tv_button_insert"
                        style="@style/SettingItem"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:drawableStart="@drawable/ic_checkbox_false"
                        android:text="Insert"
                        app:layout_constraintEnd_toStartOf="@id/setting_guideline_middle_sqlite"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/setting_tv_sqlite_header" />

                    <TextView
                        android:id="@+id/setting_tv_button_update"
                        style="@style/SettingItem"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:drawableStart="@drawable/ic_checkbox_false"
                        android:text="Update"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toEndOf="@id/setting_guideline_middle_sqlite"
                        app:layout_constraintTop_toBottomOf="@id/setting_tv_sqlite_header" />

                    <TextView
                        style="@style/SettingItem"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:layout_marginBottom="8dp"
                        android:drawableStart="@drawable/ic_checkbox_false"
                        android:text="Delete"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toStartOf="@id/setting_guideline_middle_sqlite"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/setting_tv_button_insert" />

                </android.support.constraint.ConstraintLayout>

                <android.support.constraint.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:background="@drawable/setting_tab_bg">

                    <TextView
                        android:id="@+id/setting_tv_misc_header"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/setting_tab_header_bg"
                        android:drawableStart="@drawable/ic_misc"
                        android:drawablePadding="2dp"
                        android:padding="6dp"
                        android:text="Misc."
                        android:textColor="#737bd4"
                        android:textSize="16sp" />

                    <android.support.constraint.Guideline
                        android:id="@+id/setting_guideline_middle_misc"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        app:layout_constraintGuide_percent="0.5" />

                    <TextView
                        style="@style/SettingItemText"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="File Size (W) :"
                        app:layout_constraintBottom_toBottomOf="@+id/setting_et_misc_filesizew"
                        app:layout_constraintEnd_toStartOf="@id/setting_guideline_middle_misc"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="@id/setting_et_misc_filesizew" />

                    <EditText
                        android:id="@+id/setting_et_misc_filesizew"
                        style="@style/SettingItemEditText"
                        android:layout_width="60dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:layout_weight="1"
                        android:inputType="number"
                        app:layout_constraintStart_toEndOf="@id/setting_guideline_middle_misc"
                        app:layout_constraintTop_toBottomOf="@id/setting_tv_misc_header"
                        tools:text="1" />

                    <TextView
                        android:id="@+id/setting_tv_misc_filesizew_message"
                        style="@style/SettingItemText"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:paddingStart="4dp"
                        android:paddingEnd="4dp"
                        android:text="MB"
                        app:layout_constraintBottom_toBottomOf="@id/setting_et_misc_filesizew"
                        app:layout_constraintStart_toEndOf="@id/setting_et_misc_filesizew"
                        app:layout_constraintTop_toTopOf="@id/setting_et_misc_filesizew" />

                    <TextView
                        style="@style/SettingItemText"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:paddingStart="0dp"
                        android:text="(586MB free)"
                        android:textSize="12sp"
                        app:layout_constraintBottom_toBottomOf="@+id/setting_et_misc_filesizew"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toEndOf="@id/setting_tv_misc_filesizew_message"
                        app:layout_constraintTop_toTopOf="@id/setting_et_misc_filesizew" />

                    <TextView
                        style="@style/SettingItemText"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="File Size (R) :"
                        app:layout_constraintBottom_toBottomOf="@+id/setting_et_misc_filesizer"
                        app:layout_constraintEnd_toStartOf="@id/setting_guideline_middle_misc"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="@id/setting_et_misc_filesizer" />

                    <EditText
                        android:id="@+id/setting_et_misc_filesizer"
                        style="@style/SettingItemEditText"
                        android:layout_width="60dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:layout_weight="1"
                        android:inputType="number"
                        app:layout_constraintStart_toEndOf="@id/setting_guideline_middle_misc"
                        app:layout_constraintTop_toBottomOf="@id/setting_et_misc_filesizew"
                        tools:text="1" />

                    <TextView
                        style="@style/SettingItemText"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:paddingStart="4dp"
                        android:paddingEnd="4dp"
                        android:text="MB"
                        app:layout_constraintBottom_toBottomOf="@id/setting_et_misc_filesizer"
                        app:layout_constraintStart_toEndOf="@id/setting_et_misc_filesizer"
                        app:layout_constraintTop_toTopOf="@id/setting_et_misc_filesizer" />

                    <TextView
                        style="@style/SettingItemText"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="IO Size :"
                        app:layout_constraintBottom_toBottomOf="@+id/setting_tv_misc_iosize_spinner"
                        app:layout_constraintEnd_toStartOf="@id/setting_tv_misc_iosize_spinner"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="@id/setting_tv_misc_iosize_spinner" />

                    <TextView
                        android:id="@+id/setting_tv_misc_iosize_spinner"
                        style="@style/SettingItemEditText"
                        android:layout_width="60dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:layout_weight="1"
                        android:drawableEnd="@drawable/ic_spinner"
                        app:layout_constraintStart_toEndOf="@id/setting_guideline_middle_misc"
                        app:layout_constraintTop_toBottomOf="@id/setting_et_misc_filesizer"
                        tools:text="4KB" />

                    <TextView
                        style="@style/SettingItemText"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="Mode(File IO) :"
                        app:layout_constraintBottom_toBottomOf="@+id/setting_tv_misc_mode_fileio_spinner"
                        app:layout_constraintEnd_toStartOf="@id/setting_tv_misc_mode_fileio_spinner"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="@id/setting_tv_misc_mode_fileio_spinner" />

                    <TextView
                        android:id="@+id/setting_tv_misc_mode_fileio_spinner"
                        style="@style/SettingItemEditText"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:layout_marginEnd="8dp"
                        android:layout_weight="1"
                        android:drawableEnd="@drawable/ic_spinner"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toEndOf="@id/setting_guideline_middle_misc"
                        app:layout_constraintTop_toBottomOf="@id/setting_tv_misc_iosize_spinner"
                        tools:text="mmap+MS_ASYNC" />

                    <TextView
                        style="@style/SettingItemText"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="Transaction(SQLite) :"
                        app:layout_constraintBottom_toBottomOf="@+id/setting_et_misc_transaction"
                        app:layout_constraintEnd_toStartOf="@id/setting_et_misc_transaction"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="@id/setting_et_misc_transaction" />

                    <EditText
                        android:id="@+id/setting_et_misc_transaction"
                        style="@style/SettingItemEditText"
                        android:layout_width="60dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:layout_weight="1"
                        android:inputType="number"
                        app:layout_constraintStart_toEndOf="@id/setting_guideline_middle_misc"
                        app:layout_constraintTop_toBottomOf="@id/setting_tv_misc_mode_fileio_spinner"
                        tools:text="100" />

                    <TextView
                        style="@style/SettingItemText"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:paddingStart="4dp"
                        android:paddingEnd="4dp"
                        android:text="(1~10000)"
                        app:layout_constraintBottom_toBottomOf="@id/setting_et_misc_transaction"
                        app:layout_constraintStart_toEndOf="@id/setting_et_misc_transaction"
                        app:layout_constraintTop_toTopOf="@id/setting_et_misc_transaction" />

                    <TextView
                        style="@style/SettingItemText"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="Mode(SQLite) :"
                        app:layout_constraintBottom_toBottomOf="@+id/setting_tv_misc_mode_sqlite_spinner"
                        app:layout_constraintEnd_toStartOf="@id/setting_tv_misc_mode_sqlite_spinner"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="@id/setting_tv_misc_mode_sqlite_spinner" />

                    <TextView
                        android:id="@+id/setting_tv_misc_mode_sqlite_spinner"
                        style="@style/SettingItemEditText"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:layout_marginEnd="8dp"
                        android:layout_weight="1"
                        android:drawableEnd="@drawable/ic_spinner"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toEndOf="@id/setting_guideline_middle_misc"
                        app:layout_constraintTop_toBottomOf="@id/setting_et_misc_transaction"
                        tools:text="NORMAL" />

                    <TextView
                        style="@style/SettingItemText"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="Journal(SQLite)"
                        app:layout_constraintBottom_toBottomOf="@+id/setting_tv_misc_journal_sqlite_spinner"
                        app:layout_constraintEnd_toStartOf="@id/setting_tv_misc_journal_sqlite_spinner"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="@id/setting_tv_misc_journal_sqlite_spinner" />

                    <TextView
                        android:id="@+id/setting_tv_misc_journal_sqlite_spinner"
                        style="@style/SettingItemEditText"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:layout_marginEnd="8dp"
                        android:layout_marginBottom="16dp"
                        android:layout_weight="1"
                        android:drawableEnd="@drawable/ic_spinner"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toEndOf="@id/setting_guideline_middle_misc"
                        app:layout_constraintTop_toBottomOf="@id/setting_tv_misc_mode_sqlite_spinner"
                        tools:text="TRUNCATE" />

                </android.support.constraint.ConstraintLayout>

            </LinearLayout>
        </ScrollView>
    </android.support.design.widget.CoordinatorLayout>
</layout>